{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=COServiceDb;User Id=sa;Password=YourPassword;TrustServerCertificate=True;"
  },
  "ExternalServices": {
    "AuthService": {
      "BaseUrl": "https://api.example.com/auth",
      "Timeout": 30
    },
    "VisaDossierService": {
      "BaseUrl": "https://api.example.com/visa-dossier",
      "Timeout": 30
    },
    "DocumentService": {
      "BaseUrl": "https://api.example.com/documents",
      "Timeout": 30
    },
    "NotificationService": {
      "BaseUrl": "https://api.example.com/notifications",
      "Timeout": 30
    },
    "FacturationService": {
      "BaseUrl": "https://api.example.com/facturation",
      "Timeout": 30
    },
    "COExchangeService": {
      "BaseUrl": "https://api.example.com/co-exchange",
      "Timeout": 30
    }
  },
  "Jwt": {
    "Issuer": "COService",
    "Audience": "COService",
    "SecretKey": "YourSecretKeyHere-MustBeAtLeast32Characters"
  },
  "RetryPolicy": {
    "MaxRetries": 3,
    "DelaySeconds": 2
  },
  "CertificateGeneration": {
    "TemplatePath": "Templates/certificat-origine.html",
    "OutputPath": "Certificats",
    "ValidityDays": 365
  }
}

